<div class="row">
  <div class="medium-3 columns show-for-medium">
    <%= render 'sidebar' %>
  </div>
  <div class="medium-6 columns">
    <div class="panel event">
      <h3>
        <%= @event.title %>
      </h3>
      <%= @event.place %>
      <%= @event.date %>
    </div>
    <br />
    <% if current_user.can_attend?(@event) %>
      <%= link_to "Attend", event_attend_path(@event.id), class: "button hollow success" %>
    <% else %>
      <span class="success label">Attending</span>
    <% end %>

    <% @event.comments.each do |comment| %>
        <div class="panel">
          <p><%= comment.comment %></p>
        </div>
    <% end %>


    <%= form_for [@event, @comment] do |f| %>
      <%= f.label :comment %>
      <%= f.text_field :comment %>
      <%= f.submit "Add Comment" %>
    <% end %>

  </div>

  <div class="medium-3 columns">
    <h6>Attending:</h6>
    <ul>
    <% @event.users.each do |user| %>
      <li><%= user.name %></li>
    <% end %>
    </ul>
    <br />
  </div>
</div>
